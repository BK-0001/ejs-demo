<h1>Edit Article Page</h1>

<form method="post" action="/articles/<%= article.id %>/edit">
  <label for="article-title">Title</label>
  <input
    type="text"
    name="title"
    id="article-title"
    value="<%= article.title %>"
  />

  <label for="article-description">Description</label>
  <textarea name="description" id="article-description">
    <%= article.description %></textarea
  >

  <button type="submit">Edit</button>
</form>
